{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "baseUrl": "src",
    "incremental": true
    // "include": ["src/**/*.ts"],
    // "exclude": ["node_modules"]
  }
}
